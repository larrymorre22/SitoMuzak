@model IEnumerable<ProgettoComplessoID.Models.Vendita>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vendite</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVendita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdottoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrezzoVendita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataVendita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdottoId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.NomeTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrezzoVendita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
